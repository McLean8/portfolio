---
import '../styles/global.css';
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Ethan McLean - Software Developer portfolio showcasing projects, skills, and experience in web development and software engineering." />
		<meta http-equiv="Cache-Control" content="public, max-age=0, must-revalidate" />
		<title>{title || "Ethan McLean | Software Developer"}</title>
		<!-- 
			Note: 'unload' and 'beforeunload' event listeners can prevent back/forward cache from working.
			Use the 'pagehide' event instead if you need to detect when a user leaves the page.
		-->
		<script>
			// Check for saved theme preference as soon as possible to avoid FOUC
			const theme = localStorage.getItem('theme');
			if (theme === 'light') {
				document.documentElement.classList.add('light-mode');
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
